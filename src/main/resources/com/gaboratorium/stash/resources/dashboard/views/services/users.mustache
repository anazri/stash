{{> ../partials/head }}
<div class="container-fluid o-page">
    <div class="row o-page">
        {{> ../partials/sidebar }}
        <div class="col o-main">
            <div class="col-content-l">

                <!-- Getting started -->
                <section>
                    <h1>Users</h1>
                    <p>Currently your App has {{ vm.numberOfUsers }} registered users.</p>
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>E-mail</th>
                                <th>Secondary e-mail</th>
                                <th>First name</th>
                                <th>Last name</th>
                                <th>Gender</th>
                                <th>Role</th>
                                <th>Country</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#vm.users}}
                            <tr>
                                <td>{{userId}}</td>
                                <td>{{userEmail}}</td>
                                <td>{{userEmailSecondary}}</td>
                                <td>{{userFirstName}}</td>
                                <td>{{userLastName}}</td>
                                <td>{{userGender}}</td>
                                <td>{{userRole}}</td>
                                <td>{{userCountry}}</td>
                            </tr>
                            {{/vm.users}}
                        </tbody>
                    </table>
                </section>

            </div>
        </div>


    </div>
</div>
{{> ../partials/footer }}
